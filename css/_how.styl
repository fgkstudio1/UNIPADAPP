.how 
  padding 39px 0 50px
  .text 
    margin-top 22px
  &-bg 
    position absolute
    width 1440px
    left 50% 
    top 3%
    transform: translateX(-50%)
    pointer-events: none
    z-index -1
  .blocks 
    display flex
    justify-content space-between
    max-width: 960px
    margin 53px auto 0
  .block 
    text-align center
    max-width: 420px
    width 100%
    margin  0 auto
    &-img 
      max-width: 230px
      width 100%
      margin 0 auto 28px
    &-title 
      margin-bottom 20px
      &.blue
        color: #7DEEFF;
      &.pink
        color: #E6017A;
    &-text 
      margin-bottom 20px
      font-weight: 600;
      font-size: 17px;
      line-height: 30px;
  &-logo 
    max-width: 430px
    width 100% 
    margin 59px auto 31px 
  &-text 
    text-align center
  .items
    display flex
    justify-content space-between
    margin 151px auto 0
    max-width: 1000px
    &-img 
      max-width: 302px
      width 100%
      margin 0 auto
      position relative
      top -72px
  .item
    text-align center
    position: relative
    width 100%
    max-width: 300px
    &:nth-child(2)
      top -110px
      max-width: 330px
      padding 0 15px
    &-line
      position absolute
      z-index -1
      &.line
        &1
          width 291.5px
          left: 7px;
          top: -2px;
        &2
          width 204.5px
          top 20px
          right 52px
        &3
          width 233.5px
          top: 17px;
          left: 46px;
    &-icon 
      display flex
      justify-content center
      align-items center
      margin-bottom 25px
    &-title 
      margin-bottom 20px
  
  .svg 
    position: absolute;
    width: 0;
    height: 0;
  .content 
    width: 100%;
    height: 296px;
    background: #000D25
    -webkit-clip-path: url(#my-clip-path);
    clip-path: url(#my-clip-path);
    display flex
    align-items center
    justify-content space-between
    align-items center
    margin-top -8px
    overflow hidden
    &-item
      display flex
      flex-direction: column
      align-items center
      justify-content center
      width 25%
      border-right: 3px solid #031331;
      height 100%
      &:last-child 
        border-color transparent
      &-text 
        font-weight: 600;
        font-size: 30px;
        line-height: 30px;
        margin-top 25px
    
  @media (max-width : 998px)
    padding-top 50px
    .item 
      &-line
        &.line1
          width 207px
        &.line2
          width 150px
          top 0
        &.line3
          width 170px
    .content 
      -webkit-clip-path: url(#my-clip-path2);
      clip-path: url(#my-clip-path2);
      background-image url(../img/main/how/mask-bg.png)
      background-size: cover
      background-repeat no-repeat
      background-position: center
      flex-direction: column
      height 835px
      max-width: 668px
      margin 0 auto
      padding 55px 0
      &-item
        width 100%
        border-right none
        padding 0 20px
        border-bottom: 3px solid #0F283F
  
  @media (max-width : 768px)
    .how 
      &-logo 
        max-width: 300px
        margin 30px auto
    .blocks
      flex-direction column
      align-items center
      margin-top 30px
    .block 
      margin-bottom 30px
    .items 
      flex-direction: column
      align-items center
      margin-top 70px
    .item
      margin-bottom 40px
      &:nth-child(2)
        top 0
    .items-img
      top 0
      margin-bottom 50px
  

  @media (max-width : 568px)
    .content 
      height 600px
   

      