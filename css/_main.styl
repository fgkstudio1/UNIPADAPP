.wrapper
	max-width 1210px
	width 100%
	padding 0 15px 0 15px
	margin 0 auto
	position relative

/* titles */
p,
h1,
h2,
h3,
h4
	margin 0 
	padding 0

h1,
h2,
h3,
h4
	font-family: $custom-font-family 

h4,
h3
	font-size: 20px;
	line-height: 30px;
	color: #FFFFFF;

.page  
	overflow hidden
// section 
// 	overflow-x hidden

.title 
	font-size 50px 
	line-height 65px
	color $white
	font-weight 700
	text-align center
	max-width: 700px
	width 100% 
	margin 0 auto

.text 
	text-align center
	max-width: 700px
	width 100% 
	margin 0 auto

.subtitle 
	text-align center

.default-btn
	background: #E6017A;
	border-radius: 50px;	
	font-weight: bold;
	font-size: 15px;
	line-height: 30px;
	color $white
	text-align center
	padding 26px 20px 24px
	width 100%
	display flex
	justify-content center
	align-items center
	&:hover 
		box-shadow: 0 0 10px rgba(#E6017A, .3), 0 0 40px rgba(#E6017A, .3), 0 0 80px rgba(#E6017A, .3);


span.pink 
	color #E6017A
span.blue 
	color #7DEEFF
span.bold 
	font-weight 700


.wow
	visibility: hidden


